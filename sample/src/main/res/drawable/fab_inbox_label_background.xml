<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fake drop shadow -->
    <item>
        <shape>
            <solid android:color="@color/inbox_drop_shadow" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Actual shape -->
    <item android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white" />
            <padding
                android:left="16dp"
                android:top="2dp"
                android:right="16dp"
                android:bottom="4dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>
